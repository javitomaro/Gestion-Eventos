<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dlgs="clr-namespace:MvvmDialogs.Behaviors;assembly=MvvmDialogs"
		dlgs:DialogBehavior.DialogViewModels="{Binding Dialogs}"
        xmlns:local="clr-namespace:GestionEventos"
        xmlns:ViewModel="clr-namespace:GestionEventos.ViewModel" x:Class="GestionEventos.MainWindow"
        mc:Ignorable="d"
        Title="Log In" Height="300" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <ViewModel:InicioViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF59992D" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="label" Content="USER" HorizontalAlignment="Left" Margin="242,213,0,0" VerticalAlignment="Top" FontFamily="Open Sans" FontSize="14" FontWeight="Bold" Foreground="#FFF9F9F9"/>
        <Label x:Name="label_Copy" Content="PASSWORD&#xA;" HorizontalAlignment="Left" Margin="204,262,0,0" VerticalAlignment="Top" FontFamily="Open Sans" FontSize="14" FontWeight="Bold" Foreground="White"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="22" Margin="292,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="261" BorderBrush="#FF96A01E" BorderThickness="2" Background="#FFCDCDCD" FontFamily="Open Sans" Cursor="IBeam"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="292,262,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="261" Background="#FFCDCDCD" BorderBrush="#FF96A01E" BorderThickness="2" FontFamily="Open Sans" Cursor="IBeam"/>
        <Button x:Name="button" Content="LOG IN"  HorizontalAlignment="Left" Margin="373,326,0,0" VerticalAlignment="Top" Width="95" FontFamily="Open Sans" FontWeight="Bold" TextOptions.TextHintingMode="Animated" Foreground="#FF090A0A" Cursor="Hand" Height="33" FontSize="14" Background="#FF2C8AC5" BorderBrush="{x:Null}" Command="{Binding LogInCommand}"/>
        <Button x:Name="button_Copy" Content="NEW USER" HorizontalAlignment="Left" Margin="373,381,0,0" VerticalAlignment="Top" Width="95" FontFamily="Open Sans" FontWeight="Bold" TextOptions.TextHintingMode="Animated" Background="#FF3CC9A2" Foreground="#FF090A0A" Cursor="Hand" Height="33" FontSize="14" BorderBrush="{x:Null}"/>
        <Button x:Name="button_Copy1" Content="EXIT" HorizontalAlignment="Left" Margin="373,435,0,0" VerticalAlignment="Top" Width="95" FontFamily="Open Sans" FontWeight="Bold" TextOptions.TextHintingMode="Animated" Background="#FFE24B4B" Foreground="#FF090A0A" Cursor="Hand" Height="33" FontSize="14" BorderBrush="{x:Null}"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="33" Margin="338,326,0,0" VerticalAlignment="Top" Width="33" Source="pack://siteoforigin:,,,/Resources/login.png"/>
        <Image x:Name="image_Copy" HorizontalAlignment="Left" Height="33" Margin="338,381,0,0" VerticalAlignment="Top" Width="33" Source="pack://siteoforigin:,,,/Resources/newuser.png"/>
        <Image x:Name="image_Copy1" HorizontalAlignment="Left" Height="33" Margin="338,435,0,0" VerticalAlignment="Top" Width="33" Source="pack://siteoforigin:,,,/Resources/exit.png"/>

    </Grid>
</Window>
